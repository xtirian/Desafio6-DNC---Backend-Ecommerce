// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String

  sales Sale[]
}

model Product {
  id       Int     @id @default(autoincrement())
  name     String
  price    Decimal
  cost     Decimal
  quantity Int

  operations   Operation[] @relation("OperationToProduct")
  stockEntries Stock[]     @relation("StockToProduct")
}

model Operation {
  id        Int       @id @default(autoincrement())
  type      String    // Aqui estamos criando a informação que indica se esta operação é uma venda ou uma compra. Isso será importante para o controle de estoque
  quantity  Int
  productId Int
  product   Product   @relation("OperationToProduct", fields: [productId], references: [id])

  sales     Sale[]     @relation("SaleToOperation")
  purchases Purchase[] @relation("PurchaseToOperation")
  stockEntry Stock[]
}

model Sale {
  id           Int      @id @default(autoincrement())

  customerId   Int
  customer     Customer @relation(fields: [customerId], references: [id])

  operationId  Int
  operation    Operation @relation("SaleToOperation", fields: [operationId], references: [id])

  totalPrice   Decimal
}

model Purchase {
  id           Int      @id @default(autoincrement())

  // Aqui pode entrar o ID do fornecedor e informações, se tivermos uma tabela para fornecedores, criando a relação entre eles

  operationId  Int
  operation    Operation @relation("PurchaseToOperation", fields: [operationId], references: [id])

  totalCost    Decimal
}


model Stock {
  id          Int       @id @default(autoincrement())
  productId   Int
  product     Product   @relation("StockToProduct", fields: [productId], references: [id])
  operationId Int
  operation   Operation @relation(fields: [operationId], references: [id])
  quantity    Int
}
